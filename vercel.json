{
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/node"
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "NODE_ENV": "production",
          "CUSTOM_VAR": "value"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/server.js" },
      { "src": "/(.*)", "dest": "/frontend/.next/$1" }
    ]
  }

